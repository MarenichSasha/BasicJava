package com.company;
import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter min number: ");
        int min = scanner.nextInt();
        System.out.println("Enter max number: ");
        int max = scanner.nextInt();
        int rand = (int) (min + (Math.random()) * (max - min));
        int score = (int) Math.ceil((Math.log(max-min) / Math.log(2)));
        System.out.println("score = " + score);
        System.out.println("Enter your number: ");
        int num = scanner.nextInt();
        int i = 0;
        while ((num != rand) || (i <= score)) {
            if (num < rand)
            {
                System.out.println("Num < rand");
                i++;
            }
            else
            {
                System.out.println("Num > rand");
                i++;
            }

            System.out.print("Your number is incorrect!\nEnter your number please: ");
            num = scanner.nextInt();
        }
        System.out.println("Your number is right!");
    }
}
